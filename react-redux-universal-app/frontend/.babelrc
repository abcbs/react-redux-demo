{
	"presets":
	[
		"react", 
		"es2015", 
		"stage-0"
	],

	"plugins":
	[
		"add-module-exports",
		"transform-bluebird",
		"transform-decorators-legacy",
		"transform-react-display-name"
	],

	"env":
	{
		"server":
		{
			"presets":
			[
				"react", 
				"node6", 
				"stage-0"
			],

			"plugins":
			[
				"transform-runtime",
				"add-module-exports",
				"transform-decorators-legacy",
				"transform-react-display-name"
			]
		},

		"react-intl-extract-default-messages":
		{
			"plugins":
			[
				["react-intl", 
				{
					"messagesDir": "./build/messages/",
					"enforceDescriptions": true
				}]
			]
		}
	}
}